{
  "hosting": {
    "public": ".next/export",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {"source": "**/*.js", "headers": [{"key": "Cache-Control", "value": "public,max-age=3600,immutable"}]},
      {"source": "**/*.css", "headers": [{"key": "Cache-Control", "value": "public,max-age=3600,immutable"}]},
      {"source": "**/*.png", "headers": [{"key": "Cache-Control", "value": "public,max-age=86400"}]}
    ]
  }
}

{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  "allowJs": true,
  "skipLibCheck": true,
  "strict": true,
    "noEmit": true,
    "incremental": true,
  "module": "esnext",
    "esModuleInterop": true,
  "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
    ,
    // Limit automatically-included @types packages to avoid test-only types during production builds
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    },
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "gluxr-dao-pool/app/.next"
  ]
}
